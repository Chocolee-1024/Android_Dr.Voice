<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.imac.voice_app.component.Histogram
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:chartBaseLineColor="@color/history_base_line"
        app:chartColor="@color/history_text"
        app:chartLineDp="@dimen/histogram_chart_line"
        app:chartStrokeDp="@dimen/histogram_chart_stroke"
        app:chartTextSizeDp="@dimen/histogram_chart_text_size"
        app:isAnimator="true"
        app:textColor="@color/history_text" />
</android.support.percent.PercentRelativeLayout>
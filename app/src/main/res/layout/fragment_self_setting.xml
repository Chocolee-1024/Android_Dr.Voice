            android:background="@drawable/item_self_setting_not_select"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="30sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/topic_seven"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/item_self_setting_not_select"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/item_self_setting_not_select"
            android:gravity="center"
            android:text="SAVE"
            android:textColor="@color/white"
            android:textSize="30sp"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@id/weekly_assessment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="40%">

        <TextView
            android:id="@+id/weekly_assessment_topic_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weekly_assessment_sound_title"
            android:textColor="@color/weekly_assessment_topic_number"
            android:textSize="@dimen/weekly_assessment_topic_number_text_size"
            app:layout_marginLeftPercent="3%"
            app:layout_marginTopPercent="3%" />

        <TextView
            android:id="@+id/weekly_assessment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/weekly_assessment_sound_title"
            android:textColor="@color/weekly_assessment_topic_number"
            android:textSize="@dimen/weekly_assessment_topic_number_text_size"
            app:layout_marginRightPercent="3%"
            app:layout_marginTopPercent="3%" />

        <TextView
            android:id="@+id/weekly_assessment_topic_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/weekly_assessment_sound_title"
            android:textColor="@color/weekly_assessment_topic_content"
            android:textSize="@dimen/weekly_assessment_topic_content_text_size" />
    </androidx.percentlayout.widget.PercentRelativeLayout>


    <RadioGroup
        android:id="@+id/weekly_assessment_select_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/weekly_assessment_container"
        android:orientation="vertical"
        app:layout_heightPercent="60%">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02"
            android:background="@color/black" />

        <RadioButton
            android:checked="true"
            android:id="@+id/option_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:button="@drawable/drawable_weekly_assessment_radiobutton"
            android:paddingLeft="@dimen/weekly_assessment_radio_padding_left"
            android:text="123"
            android:textColor="@color/weekly_assessment_topic_content"
            android:textSize="@dimen/weekly_assessment_select_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02"
            android:background="@color/black" />

        <RadioButton
            android:id="@+id/option_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:button="@drawable/drawable_weekly_assessment_radiobutton"
            android:paddingLeft="@dimen/weekly_assessment_radio_padding_left"
            android:text="123"
            android:textColor="@color/weekly_assessment_topic_content"
            android:textSize="@dimen/weekly_assessment_select_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02"
            android:background="@color/black" />

        <RadioButton
            android:id="@+id/option_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:button="@drawable/drawable_weekly_assessment_radiobutton"
            android:paddingLeft="@dimen/weekly_assessment_radio_padding_left"
            android:text="123"
            android:textColor="@color/weekly_assessment_topic_content"
            android:textSize="@dimen/weekly_assessment_select_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02"
            android:background="@color/black" />

        <RadioButton
            android:id="@+id/option_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:button="@drawable/drawable_weekly_assessment_radiobutton"
            android:paddingLeft="@dimen/weekly_assessment_radio_padding_left"
            android:text="123"
            android:textColor="@color/weekly_assessment_topic_content"
            android:textSize="@dimen/weekly_assessment_select_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02"
            android:background="@color/black" />

        <RadioButton
            android:id="@+id/option_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:button="@drawable/drawable_weekly_assessment_radiobutton"
            android:paddingLeft="@dimen/weekly_assessment_radio_padding_left"
            android:text="123"
            android:textColor="@color/weekly_assessment_topic_content"
            android:textSize="@dimen/weekly_assessment_select_text_size" />

        <View
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02"
            android:background="@color/black" />
    </RadioGroup>

</androidx.percentlayout.widget.PercentRelativeLayout>
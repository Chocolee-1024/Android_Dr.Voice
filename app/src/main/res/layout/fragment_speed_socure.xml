<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

    <RelativeLayout
            android:gravity="center"
            android:background="#ffeff0eb"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

        <TextView
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="開始時間："
                android:id="@+id/start_time"/>

        <TextView
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/start_time"
                android:layout_toRightOf="@+id/start_time"
                android:layout_toEndOf="@+id/start_time"
                android:id="@+id/start_time_value"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

    <RelativeLayout
            android:gravity="center"
            android:background="#ffeff0eb"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

        <TextView
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="結束時間："
                android:id="@+id/end_time"/>

        <TextView
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/end_time"
                android:layout_toRightOf="@+id/end_time"
                android:layout_toEndOf="@+id/end_time"
                android:id="@+id/end_time_value"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

    <RelativeLayout
            android:gravity="center"
            android:background="#ffeff0eb"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <TextView
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="總字數："
                android:id="@+id/speed_count"/>

        <TextView
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/speed_count"
                android:layout_toRightOf="@+id/speed_count"
                android:layout_toEndOf="@+id/speed_count"
                android:id="@+id/speed_count_value"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

    <RelativeLayout
            android:gravity="center"
            android:background="#ffeff0eb"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <TextView
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="語速："
                android:id="@+id/speed"/>

        <TextView
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/speed"
                android:layout_toRightOf="@+id/speed"
                android:layout_toEndOf="@+id/speed"
                android:id="@+id/speed_value"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

    <RelativeLayout
            android:gravity="center"
            android:background="#ffeff0eb"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <TextView
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="總錄音時間："
                android:id="@+id/record"/>

        <TextView
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/record"
                android:layout_toRightOf="@+id/record"
                android:layout_toEndOf="@+id/record"
                android:id="@+id/record_value"/>
    </RelativeLayout>
</LinearLayout>
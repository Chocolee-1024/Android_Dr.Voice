<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topic_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@drawable/item_daily_setting_not_select"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/topic_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@drawable/item_daily_setting_not_select"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topic_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@drawable/item_daily_setting_not_select"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/topic_four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@drawable/item_daily_setting_not_select"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topic_five"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@drawable/item_daily_setting_not_select"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/topic_six"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@drawable/item_daily_setting_not_select"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="30sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/item_fragment_input_password_button_bg"
        android:text="SAVE"
        android:textColor="@color/white"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/speak_speed_time_default"
        android:textSize="50sp"
        android:textColor="@color/black"
        app:layout_heightPercent="18%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/tv_time"
        android:gravity="center"
        android:textColor="@color/speak_speed_date"
        android:text="@string/speak_speed_date_default"
        android:textSize="12sp"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="100%" />

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rl_detail_data"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/tv_date"
        android:layout_centerHorizontal="true"
        app:layout_heightPercent="43%"
        app:layout_widthPercent="68%"
        app:layout_marginTopPercent="3%">

        <com.imac.voice_app.component.CustomProgressBar
            android:id="@+id/bar_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv_explanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_calculate_num"
            android:layout_centerHorizontal="true"
            android:text="@string/speak_calculate_font"
            android:textColor="@color/speak_speed_idle"/>

        <TextView
            android:id="@+id/tv_calculate_num"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:text="@string/zero"
            android:textSize="64sp"
            android:textColor="@color/speak_speed_idle"
            app:layout_heightPercent="30%"/>

        <TextView
            android:id="@+id/tv_status_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_calculate_num"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/speak_start_hint_default"
            android:textColor="@color/speak_speed_idle"
            android:textSize="16sp" />

    </android.support.percent.PercentRelativeLayout>

    <ImageView
        android:id="@+id/btn_Check"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/rl_detail_data"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mike_button"
        android:scaleType="centerInside"
        app:layout_widthPercent="18%"
        app:layout_heightPercent="20%"/>

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/rl_detail_data"
        android:layout_toRightOf="@+id/btn_Check"
        android:visibility="invisible"
        android:src="@drawable/close_button"
        android:scaleType="centerInside"
        app:layout_marginLeftPercent="7%"
        app:layout_widthPercent="16%"
        app:layout_heightPercent="20%"/>
</android.support.percent.PercentRelativeLayout>

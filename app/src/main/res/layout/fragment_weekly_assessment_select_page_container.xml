<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.imac.dr.voice_app.component.DisableSwipeViewPager
        android:id="@+id/view_pager_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="90%" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/weekly_assessment_select_container">

        <Button
            android:id="@+id/next_step_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/indicator"
            android:background="@color/transparent"
            android:text="@string/daily_exercise_next_step"
            android:textColor="@color/daily_exercise_step_button_text"
            android:textSize="@dimen/weekly_assessment_previous_step_button_text_size" />

        <Button
            android:id="@+id/previous_step_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/indicator"
            android:background="@color/transparent"
            android:text="@string/daily_exercise_previous_step"
            android:textColor="@color/daily_exercise_step_button_text"
            android:textSize="@dimen/weekly_assessment_previous_step_button_text_size" />

    </androidx.percentlayout.widget.PercentRelativeLayout>
</androidx.percentlayout.widget.PercentRelativeLayout>
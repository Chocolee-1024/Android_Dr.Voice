<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/day_exercise"
        android:text="@string/main_day_exercise"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="15%"
        app:layout_marginLeftPercent="15%"
        app:layout_marginRightPercent="15%"/>
    <Button
        android:id="@+id/week_test"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/day_exercise"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="15%"
        app:layout_marginRightPercent="15%"
        android:text="@string/main_week_test"/>
    <Button
        android:id="@+id/history"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:text="@string/main_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/week_test"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="15%"
        app:layout_marginRightPercent="15%"/>
    <Button
        android:id="@+id/monitor"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/history"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="15%"
        app:layout_marginRightPercent="15%"
        android:text="@string/main_setting"/>
    <Button
        android:id="@+id/setting"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:text="@string/main_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/monitor"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="15%"
        app:layout_marginRightPercent="15%"/>


</android.support.percent.PercentRelativeLayout>
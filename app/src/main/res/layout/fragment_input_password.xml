<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="請輸入醫師密碼，非醫師請勿輸入"
        app:layout_marginTopPercent="3%" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/input"
            android:background="@drawable/item_fragment_input_password_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="請輸入密碼"
            android:inputType="textPassword"
            app:layout_heightPercent="10%"
            app:layout_marginBottomPercent="3%"
            app:layout_marginLeftPercent="10%"
            app:layout_marginRightPercent="10%" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/input"
            android:layout_alignLeft="@id/input"
            android:layout_alignRight="@id/input"
            android:layout_alignStart="@id/input"
            android:layout_below="@id/input"
            android:background="@drawable/fragment_inputpassword_button_bg"
            android:text="確認"
            android:textColor="@color/white" />
    </androidx.percentlayout.widget.PercentRelativeLayout>
</androidx.percentlayout.widget.PercentRelativeLayout>
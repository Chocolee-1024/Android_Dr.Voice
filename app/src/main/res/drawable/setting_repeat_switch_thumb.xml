<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape
            android:shape="oval">
            <stroke android:width="2dp" android:color="@color/setting_connection_us"/>
            <solid android:color="@color/activity_bg_color"/>
            <size android:width="16dp"
                android:height="16dp"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape
            android:shape="oval">
            <stroke android:width="-2dp" android:color="@color/setting_connection_us"/>
            <solid android:color="@color/activity_bg_color"/>
            <size android:width="16dp"
                android:height="16dp"/>
        </shape>
    </item>
</selector>